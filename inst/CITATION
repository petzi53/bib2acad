## -*- R -*-
citHeader("To cite the R package 'bib2acad' in publications use:")

year <- sub("-.*", "", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry	= "Manual",
         title	= "bib2acad: Convert BibTex to Markdown for the Hugo Academic Theme",
         author = c(person("Peter", "Baumgartner"),
                    person("Lorenzo", "Bussetto")),
         year = year,
         url = "https://github.com/petzi53/bib2acad/",
         textVersion = paste(
             "Baumgartner, P.; Bussetto, L.(",
             year, ").  bib2acad: Convert BibTex to Markdown for the Hugo Academic Theme. ",
             vers, ". https://github.com/petzi53/bib2acad.", sep = "")
         )